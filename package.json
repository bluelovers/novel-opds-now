{
  "name": "novel-opds-now",
  "version": "1.0.19",
  "description": "按需生成 epub，此模組不使用排程任務來生成 epub",
  "keywords": [
    "opds",
    "server",
    "gun",
    "gun.js",
    "epub",
    "book",
    "local",
    "p2p",
    "peer",
    "novel",
    "node-novel"
  ],
  "homepage": "https://github.com/bluelovers/novel-opds-now#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/novel-opds-now/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/novel-opds-now.git"
  },
  "license": "MIT",
  "author": "",
  "main": "index.js",
  "bin": {
    "novel-opds-now": "bin/novel-opds-now.js"
  },
  "directories": {
    "lib": "lib",
    "doc": "docs"
  },
  "scripts": {
    "pm2:start": "pm2 start -i 1 --name novel-opds-now ./cli/server.js",
    "pm2:close": "pm2 delete novel-opds-now",
    "coverage": "npx nyc yarn run test",
    "lint": "npx eslint **/*.ts",
    "ncu": "npx yarn-tool ncu -u",
    "npm:publish": "npm publish",
    "update-deps": "npx yarn-tool install && yarn run prepublish:lockfile",
    "postpublish": "git commit -m \"chore(release): publish\" .",
    "prepublish:lockfile": "npx yarn-tool lockfile --npm --overwrite",
    "prepublishOnly": "yarn run ncu && yarn run sort-package-json && yarn run update-deps",
    "sort-package-json": "npx yarn-tool sort",
    "start": "ts-node ./server/cluster",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:mocha": "npx mocha --require ts-node/register \"!(node_modules)/**/*.{test,spec}.{ts,tsx}\"",
    "tsc:default": "tsc -p tsconfig.json",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "@bluelovers/fast-glob": "^3.0.4",
    "@node-novel/cache-loader": "^1.0.14",
    "@node-novel/cached-dmzj": "^1.1.73",
    "@node-novel/cached-esjzone": "^1.0.42",
    "@node-novel/cached-masiro": "^1.0.39",
    "@node-novel/cached-wenku8": "^1.0.47",
    "@node-novel/layout": "^2.0.4",
    "@node-novel/layout-pattern": "^1.0.15",
    "@yarn-tool/update-notifier": "^1.0.6",
    "address2": "^1.0.3",
    "array-hyper-unique": "^1.1.0",
    "bluebird": "^3.7.2",
    "calibre-opds": "^1.0.5",
    "cjk-conv": "^1.2.30",
    "cross-fetch": "^3.0.4",
    "debug-color2": "^1.1.7",
    "dot-values2": "^2.0.0",
    "express": "^4.17.1",
    "file-type": "^14.1.0",
    "formidable": "^1.2.1",
    "fs-extra": "^8.1.0",
    "gun": "^0.2020.116",
    "gun-tag": "^3.0.2",
    "lodash": "^4.17.15",
    "micro": "^9.3.5-canary.3",
    "node-novel-info": "^3.0.0",
    "novel-downloader": "^1.3.13",
    "novel-downloader-cli": "^1.0.24",
    "novel-epub": "^1.1.60",
    "novel-segment": "^2.5.3",
    "novel-segment-cli": "^1.1.1",
    "opds-extra": "^3.0.7",
    "qrcode-terminal": "^0.12.0",
    "regexp-cjk": "^3.3.8",
    "regexp-cjk-plugin-escape-unicode-property": "^1.0.1",
    "regexp-cjk-plugin-extra": "^1.0.5",
    "segment-dict": "^2.3.53",
    "serve-favicon": "^2.5.0",
    "sort-object-keys2": "^1.1.0",
    "ta-json-x": "^2.5.2",
    "terminal-link": "^2.1.1",
    "tmp": "^0.1.0",
    "ts-type": "^1.2.13",
    "yargs": "^15.1.0",
    "zero-width": "^1.0.5"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.17",
    "@types/bluebird": "^3.5.29",
    "@types/express": "^4.17.2",
    "@types/formidable": "^1.0.31",
    "@types/fs-extra": "^8.0.1",
    "@types/lodash": "^4.14.149",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^13.7.0",
    "@types/serve-favicon": "^2.5.0",
    "@types/tmp": "^0.1.0",
    "@types/yargs": "^15.0.3"
  }
}
